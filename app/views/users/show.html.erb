<div class = "container">
  <div class = "row">
    <div class = "col-lg-3">
    </div>
    <div class="card col-lg-3" style="width: 18rem;">
      <img src= <%= @user.images[:small_url] %> class="card-img-top" alt="..." style = "height: 200px">
      <div class="card-body bg-light">
        <h5 class="card-title "><%= @user.name %></h5>
        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
        <p>
          <strong>First name:</strong>
          <%= @user.first_name %>
        </p>

        <p>
         <strong>Last name:</strong>
          <%= @user.last_name %>
        </p>
      </div>
    </div>
  </div>
</div>
